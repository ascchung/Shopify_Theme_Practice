{% comment %}
  Manual pagination variables
{% endcomment %}
{% assign page = request.params.page | default: 1 | plus: 0 %}
{% assign per_page = 1 %}
{% assign offset = page | times: per_page | minus: per_page %}
{% assign orders = customer.orders %}
{% assign total_orders = orders.size %}
{% assign paginated_orders = orders | slice: offset, per_page %}

<div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
  <h1 class="text-2xl font-bold text-gray-700">Account</h1>

  <div class="block md:flex gap-4">
    {% if total_orders > 0 %}
      <div class="w-full my-6 md:my-12">
        <h2 class="text-xl font-bold text-gray-700">Order History</h2>
        <p>Total Orders: {{ total_orders }}</p>

        <!-- Order Listing -->
        <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
          {% for order in paginated_orders %}
            <div class="relative">
              <div class="w-full min-80 bg-gray-200 rounded-md overflow-hidden lg:h-80">
                {% if order.line_items.first.image %}
                  <img
                    class="w-full h-full object-center object-cover"
                    src="{{ order.line_items.first.image | img_url: 'medium' }}"
                    alt="{{ order.line_items.first.image.alt }}"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-center object-cover' }}
                {% endif %}
              </div>
              <div class="mt-4 flex items-start justify-between">
                <div>
                  <h3 class="text-sm text-gray-700">
                    {{ order.name | link_to: order.customer_url }}
                  </h3>
                  <p class="mt-1 text-sm text-gray-500">
                    {{ order.financial_status_label }}
                  </p>
                </div>
                <div class="text-right">
                  <p class="text-sm font-medium text-white bg-gray-700 rounded-full px-3 py-1">
                    {{ order.fulfillment_status_label }}
                  </p>
                  <p class="text-sm">{{ order.total_price | money }}</p>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <!-- Pagination Controls -->
        <div class="max-w-6xl mx-auto mt-8 flex justify-center gap-2">
          {% assign next_page = page | plus: 1 %}
          {% assign prev_page = page | minus: 1 %}

          {% if prev_page > 0 %}
            <a href="?page={{ prev_page }}" class="px-4 py-2 border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white">
              Previous
            </a>
          {% endif %}

          {% if offset | plus: per_page < total_orders %}
            <a href="?page={{ next_page }}" class="px-4 py-2 border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white">
              Next
            </a>
          {% endif %}
        </div>
      </div>
    {% else %}
      <div class="w-full h-80 flex items-center justify-center">
        <h2 class="text-base md:text-2xl font-medium">
          You don't have any orders
        </h2>
      </div>
    {% endif %}
  </div>
</div>
